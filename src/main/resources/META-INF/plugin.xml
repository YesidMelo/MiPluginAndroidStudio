<idea-plugin>
    <id>org.hefesto.graficadorcodigo</id>
    <name>Graficar codigo</name>
    <vendor email="trigoperfec@hotmail.com">Hefesto</vendor>

    <description><![CDATA[
    Este plugin nos ayuda a ver como estan las relaciones a nivel de codigo de manera visual.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="ShowLayoutBounds" class="ShowLayoutBounds" text="Prueba" description="prueba">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>